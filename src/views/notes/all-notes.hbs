<div class="row">
    {{#each notes}}
        <div class="col-md-3">
            <div class="card m-3">
                <div class="card-body m-3 d-grid gap-2">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{ title }} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                    </h4>
                    <p>
                        {{ description }}
                    </p>
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger btn-block btn-lg" type="submit">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    {{else}}
        <div class="card m-3 d-flex justify-content-between align-items-center">
            <div class="card-body m-3">
                <p class="lead">No hay notas aun</p>
                <a href="/notes/add" class="btn btn-success btn-block btn-lg">Crea una</a>
            </div>
        </div>
    {{/each}}
</div>