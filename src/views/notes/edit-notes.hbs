<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group m-3">
                    <input type="text" name="title" placeholder="Title" value="{{note.title}}" class="form-control">
                </div>
                <div class="form-group m-3">
                    <textarea name="description" class="form-control">{{note.description}}</textarea>
                </div>
                <div class="form-group d-grid gap-2">
                    <button class="btn btn-primary m-3" type="submit">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
